[API]
key = YOUR_API_KEY_HERE
secret = YOUR_API_SECRET_HERE

[CURRENCY]
currency_pairs = USDT_BTC,BTC_ETH,BTC_XMR,BTC_FCT,BTC_ETC,BTC_LTC,BTC_ZEC,BTC_XRP,BTC_DASH,BTC_STR,BTC_MAID,BTC_SDC

[BOT]
# (minutes) the number of minutes in between each update
update_interval = 6

# (minutes) the number of minutes separating coin updates
update_separation = 0.5

# (%) buy with % of main currency
main_percent = 5

# (%) sell with % of alt currency
alt_percent = 10

# (%) the percent change in BTC price since the last buy trade (long profit)
min_sell_profit = 10

# (%) the percent change in BTC price since the last sell trade (short profit)
min_buy_profit = 10

# (BTC) about $1.00 - when starting with a new currency don't keep buying after at least this much has been spent
new_currency_threshold = 0.001

# (%) if the profit loss is greater than this, open a new order (AKA "stop loss")
new_order_threshold = 10

# (BTC) reserve at least this much of the main currency
min_main = 0.0005

# (ALT) reserve at least this much of the alt currency
min_alt = 0.0

# (minutes) gather 1 month of trading history for decision making (60 * 24 * 30 * 1)
trading_history = 43200


[USDT_BTC]
min_sell_profit = 20
min_buy_profit = 20
new_order_threshold = 40

# Main is USD
min_main = 0

# ALT is BTC
min_alt = 0.01
